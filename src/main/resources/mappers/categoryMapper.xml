<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.tour.category.dao.CategoryDAO">
 	<insert id="insertCategory" parameterType="String">
 		INSERT INTO `category`
 		(
 			`categoryName`
 			, `categoryAttr`
 		)
 		VALUES
 		(
 			#{categoryName}
 			, #{categoryAttr}
 		)
 	</insert>
 	
 	<select id="selectCategoryList" resultType="com.tour.category.model.Category">
 		SELECT
 			`id`
 			, `categoryName`
 			, `categoryAttr`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`category`	
 	</select>
 	
 	<select id="selectCategoryByNameAttr" parameterType="String" resultType="int">
 		SELECT
 			count(*)
 		FROM
 			`category`
 		WHERE
 			`categoryName` = #{categoryName}
 	</select>
 	
 	<delete id="deleteCategoryByAttr" parameterType="String">
 		DELETE
 		FROM
 			`category`
 		WHERE
 			`categoryName` = #{categoryName}
 	</delete>
 	
 	<update id="updateCategoryByNameAttr" parameterType="map">
 		UPDATE `category`
		SET
			`categoryName` = #{categoryName}
			, `categoryAttr` = #{categoryAttr}
			, `updatedAt` = NOW()
		WHERE
			`categoryName` = #{checkName}
 	</update>
 	
 	<select id="selectCategoryIdByAttr" parameterType="String" resultType="int">
 		select
 			`id`
 		FROM
 			`category`
 		WHERE
 			`categoryAttr`= #{categoryAttr}
 	</select>
 	
 	<insert id="insertCategoryInfo" parameterType="map">
 		<choose>
	 		<when test ="categoryAttr == 'accomodation'">
		 		INSERT INTO `accomodation`
		 		(
					`categoryId`
					,`name`
					,`address`
					,`zipCode`
					,`intro`
					,`price`
					,`phoneNumber`
					,`email`
					,`thumbnailPic`
					,`createdAt`
					,`updatedAt`
		 		)
		 		VALUES
		 		(
		 			#{categoryId}
		 			, #{name}
		 			, #{address}
		 			, #{zipCode}
		 			, #{intro}
		 			, #{price}
		 			, #{phoneNumber}
		 			, #{email}
		 			, #{thumbnailPic}
		 			, NOW()
		 			, NOW()
		 		)
	 		</when>
	 		<when test="categoryAttr == 'tourist'">
	 			INSERT INTO `tourist`
		 		(
					`categoryId`
					,`name`
					,`address`
					,`zipCode`
					,`intro`
					,`price`
					,`phoneNumber`
					,`email`
					, `operatingTime`
					,`thumbnailPic`
					,`createdAt`
					,`updatedAt`
		 		)
		 		VALUES
		 		(
		 			#{categoryId}
		 			, #{name}
		 			, #{address}
		 			, #{zipCode}
		 			, #{intro}
		 			, #{price}
		 			, #{phoneNumber}
		 			, #{email}
		 			, #{operatingTime}
		 			, #{thumbnailPic}
		 			, NOW()
		 			, NOW()
		 		)
	 		</when>
	 		<when test="categoryAttr == 'restaurant'">
	 			INSERT INTO `restaurant`
		 		(
					`categoryId`
					,`name`
					,`address`
					,`zipCode`
					,`intro`
					,`availableToServe`
					,`type`
					,`price`
					,`phoneNumber`
					,`operatingTime`
					,`happyHour`
					,`thumbnailPic`
					,`createdAt`
					,`updatedAt`
		 		)
		 		VALUES
		 		(
		 			#{categoryId}
		 			, #{name}
		 			, #{address}
		 			, #{zipCode}
		 			, #{intro}
		 			, #{availableToServe}
		 			, #{type}
		 			, #{price}
		 			, #{phoneNumber}
		 			, #{operatingTime}
		 			, #{happyHour}
		 			, #{thumbnailPic}
		 			, NOW()
		 			, NOW()
		 		)
	 		</when>
	 		<when test="categoryAttr == 'travleTip'">
	 			INSERT INTO `travleTip`
		 		(
					`categoryId`
					,`vitalItem`
					,`culture`
					,`commonSense`
					,`recommended`
					,`warning`
					,`thumbnailPic`
					,`createdAt`
					,`updatedAt`
		 		)
		 		VALUES
		 		(
		 			#{categoryId}
		 			, #{vitalItem}
		 			, #{culture}
		 			, #{commonSense}
		 			, #{recommended}
		 			, #{warning}
		 			, #{thumbnailPic}
		 			, NOW()
		 			, NOW()
		 		)
	 		</when>
	 		<when test="categoryAttr == 'package'">
	 			INSERT INTO `package`
		 		(
					`categoryId`
					,`name`
					,`address`
					,`zipCode`
					,`intro`
					,`price`
					,`durationTime`
					,`field`
					,`operatingTime`
					,`thumbnailPic`
					,`createdAt`
					,`updatedAt`
		 		)
		 		VALUES
		 		(
		 			#{categoryId}
		 			, #{name}
		 			, #{address}
		 			, #{zipCode}
		 			, #{intro}
		 			, #{price}
		 			, #{durationTime}
		 			, #{field}
		 			, #{operatingTime}
		 			, #{thumbnailPic}
		 			, NOW()
		 			, NOW()
		 		)
	 		</when>
 		</choose>
 	</insert>
 </mapper>